<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.twoactivities.SpinnerActivity">

    <EditText
        android:id="@+id/editText_spinner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/hint_phonenumber"
        android:inputType="phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/label_spinner"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/label_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/editText_spinner"/>

    <TextView
        android:id="@+id/title_phonelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phonenumber_label"
        app:layout_constraintLeft_toRightOf="@id/text_phonelabel"
        app:layout_constraintTop_toBottomOf="@id/editText_spinner"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintRight_toLeftOf="@id/text_phonelabel"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="78dp" />

    <TextView
        android:id="@+id/text_phonelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nothing_entered"
        android:layout_marginLeft="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintTop_toBottomOf="@id/editText_spinner"
        app:layout_constraintLeft_toRightOf="@+id/title_phonelabel"
        app:layout_constraintStart_toEndOf="@+id/title_phonelabel" />

</androidx.constraintlayout.widget.ConstraintLayout>